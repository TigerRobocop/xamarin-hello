<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="HelloWorld.RowItem">

    <Frame Padding="10">
        <StackLayout Orientation="Horizontal">
            <BoxView x:Name="boxColor"></BoxView>
            <StackLayout>
                <Label x:Name="lblColor" FontSize="Large"></Label>
                <Label x:Name="lblInfo" FontSize="Small" FontAttributes="Italic"></Label>
            </StackLayout>
        </StackLayout>
    </Frame>
</ContentView>
